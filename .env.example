# アプリケーションが公開するポート
APP_PORT=8080

# PostgreSQL コンテナの公開ポート
POSTGRES_PORT=5432

# 開発時は dev プロファイルを使用
SPRING_PROFILES_ACTIVE=dev

# Auth0 設定（{} の箇所を本番値に差し替えてください）
APP_AUTH0_ISSUER=https://{your-tenant}.auth0.com/
APP_AUTH0_AUDIENCE={https://api.your-service.com/}
APP_AUTH0_DOMAIN={your-tenant}.auth0.com

# データベース接続情報（必要に応じて上書き）
APP_DATASOURCE_HOST={your-host.aws.neon.tech}
APP_DATASOURCE_PORT=5432
APP_DATASOURCE_DB={your-database-name}
APP_DATASOURCE_USERNAME={neondb_owner}
APP_DATASOURCE_PASSWORD={replace-with-secret}
APP_DATASOURCE_QUERY=?sslmode=require&channelBinding=require

# OpenAI 設定
OPENAI_API_KEY={your-openai-api-key}
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30
OPENAI_DEFAULT_MAX_OUTPUT_TOKENS=1000
OPENAI_MAX_ATTEMPTS=5
